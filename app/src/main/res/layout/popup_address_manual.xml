<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="110dp"
    android:layout_marginStart="30dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="11dp"
        android:background="@drawable/bg_popup_address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <EditText
            android:id="@+id/firstName_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="الاسم الأول"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textColorHint="@color/et_text_color"
            android:fontFamily="@font/cairo_regular"
            android:background="@drawable/bg_et_filled"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:clickable="true"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <EditText
            android:id="@+id/lastName_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="الاسم الأخير"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textColorHint="@color/et_text_color"
            android:fontFamily="@font/cairo_regular"
            android:background="@drawable/bg_et_filled"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:clickable="true"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/firstName_et"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <EditText
            android:id="@+id/phoneNo_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="رقم الجوال"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textColorHint="@color/et_text_color"
            android:fontFamily="@font/cairo_regular"
            android:background="@drawable/bg_et_filled"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:clickable="true"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/lastName_et"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Spinner
            android:id="@+id/address_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_et_filled"
            android:popupBackground="#BEDADDF8"
            android:prompt="@array/city_array"
            android:entries="@array/city_array"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="12dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/phoneNo_et"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <ImageButton
            android:layout_width="10dp"
            android:layout_height="6dp"
            android:layout_marginStart="14dp"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintLeft_toLeftOf="@+id/address_sp"
            app:layout_constraintTop_toTopOf="@+id/address_sp"
            app:layout_constraintBottom_toBottomOf="@+id/address_sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="العنوان"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textColorHint="@color/et_text_color"
            android:fontFamily="@font/cairo_regular"
            android:background="@drawable/bg_et_filled"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:clickable="true"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/address_sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>