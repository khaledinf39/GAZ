<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="100"
    tools:context=".Fragments.Exchange">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#1f57ff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/cairo_semibold"
            android:text="إستبدال إسطوانة"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/back_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="7.5dp"
            android:layout_height="12dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_back_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30">

        <View
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#1f57ff"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@drawable/ic_product7"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="60">
            <TextView
                android:id="@+id/tx1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="خدمة الاستبدال المنزلي اختر نوع وحجم الاسطوانة"
                android:textSize="14sp"
                android:fontFamily="@font/cairo_semibold"
                android:layout_marginTop="23dp"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                />
            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/blue_fb_opacity"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tx1"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mainRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/line1"
                />
            <TextView
                android:id="@+id/Name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 - كغم معدن - منظم كبس"
                android:textSize="14sp"
                android:textColor="#0d0e10"
                android:fontFamily="@font/cairo_semibold"
                android:layout_marginTop="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mainRV"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mainRV"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/bg_blue_border"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15.0"
                    android:textSize="14sp"
                    android:textColor="#1f57ff"
                    android:fontFamily="@font/roboto_bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SR"
                    android:textSize="14sp"
                    android:textColor="#1f57ff"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginStart="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_marginTop="17dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toBottomOf="@+id/Name_tv">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#fafafa"
                    app:cardElevation="5dp"
                    android:layout_margin="7dp"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الوقت"
                            android:textColor="#9d9d9d"
                            android:textSize="14sp"
                            android:fontFamily="@font/cairo_regular"
                            android:layout_marginEnd="17dp"
                            android:layout_marginTop="7dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="03:45 مساءً"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:fontFamily="@font/cairo_regular"
                            android:layout_marginEnd="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="12dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_clock"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="13dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#fafafa"
                    app:cardElevation="5dp"
                    android:layout_margin="7dp"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="التاريخ"
                            android:textColor="#9d9d9d"
                            android:textSize="14sp"
                            android:fontFamily="@font/cairo_regular"
                            android:layout_marginEnd="17dp"
                            android:layout_marginTop="7dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15/5/2019"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:fontFamily="@font/cairo_regular"
                            android:layout_marginEnd="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="12dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_calender"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="13dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toBottomOf="@+id/linear1">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#fafafa"
                    app:cardElevation="5dp"
                    android:layout_margin="7dp"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="المنزل"
                            android:textColor="#9d9d9d"
                            android:textSize="14sp"
                            android:fontFamily="@font/cairo_regular"
                            android:layout_marginEnd="17dp"
                            android:layout_marginTop="7dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="طريق الملك عبد العزيز"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/cairo_regular"
                            android:layout_marginEnd="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="12dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_location"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="13dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#fafafa"
                    app:cardElevation="5dp"
                    android:layout_margin="7dp"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="العدد"
                            android:textColor="#9d9d9d"
                            android:textSize="14sp"
                            android:fontFamily="@font/cairo_regular"
                            android:layout_marginEnd="17dp"
                            android:layout_marginTop="7dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:fontFamily="@font/cairo_regular"
                            android:layout_marginEnd="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="12dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_add"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="13dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="إستبدال الآن"
                android:textSize="16sp"
                android:fontFamily="@font/cairo_semibold"
                android:textColor="@color/white"
                android:background="@drawable/bg_login_btn_radues10"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="40dp"
                app:layout_constraintTop_toBottomOf="@+id/linear2"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</LinearLayout>