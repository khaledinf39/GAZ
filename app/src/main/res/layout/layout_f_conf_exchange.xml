<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".Fragments.ConfExchange">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#1f57ff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/cairo_semibold"
            android:text="إستبدال إسطوانة"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/back_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="7.5dp"
            android:layout_height="12dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_back_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30">

        <View
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#1f57ff"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@drawable/ic_product7"
                />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingTop="20dp"
            android:layout_weight="60">
            <TextView
                android:id="@+id/tx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حجم التعبئة"
                android:textSize="14sp"
                android:textColor="#9d9d9d"
                android:fontFamily="@font/cairo_regular"
                android:layout_marginEnd="15dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06 KG"
                android:textSize="16sp"
                android:textColor="#1f57ff"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="6dp"
                app:layout_constraintRight_toLeftOf="@+id/tx1"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="كبس"
                android:textSize="16sp"
                android:textColor="#1f57ff"
                android:fontFamily="@font/cairo_regular"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نوع الاسطوانة"
                android:textSize="14sp"
                android:textColor="#9d9d9d"
                android:fontFamily="@font/cairo_regular"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                app:layout_constraintLeft_toRightOf="@+id/type_tv"
                app:layout_constraintTop_toTopOf="parent"
                />
            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue_fb_opacity"
                app:layout_constraintTop_toBottomOf="@+id/tx1"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/tx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="التاريخ"
                android:textSize="14sp"
                android:textColor="#9d9d9d"
                android:fontFamily="@font/cairo_regular"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/02/2019"
                android:textSize="16sp"
                android:textColor="#9d9d9d"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                app:layout_constraintRight_toLeftOf="@+id/tx2"
                app:layout_constraintTop_toBottomOf="@+id/line1"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_edit1"
                android:layout_marginTop="22dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@+id/line1"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue_fb_opacity"
                app:layout_constraintTop_toBottomOf="@+id/tx2"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/tx3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الوقت"
                android:textSize="14sp"
                android:textColor="#9d9d9d"
                android:fontFamily="@font/cairo_regular"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03.45   مساءً"
                android:textSize="16sp"
                android:textColor="#9d9d9d"
                android:fontFamily="@font/cairo_regular"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                app:layout_constraintRight_toLeftOf="@+id/tx3"
                app:layout_constraintTop_toBottomOf="@+id/line2"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_edit1"
                android:layout_marginTop="22dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@+id/line2"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue_fb_opacity"
                app:layout_constraintTop_toBottomOf="@+id/tx3"
                android:layout_marginTop="15dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/line3"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tx4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ملاحظات"
                        android:textSize="16sp"
                        android:textColor="#464b5d"
                        android:fontFamily="@font/cairo_regular"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="الرجاء الاتصال على رقم الهاتف قبل الوصول بدقيقة "
                        android:textSize="14sp"
                        android:textColor="@color/text_black_color"
                        android:fontFamily="@font/cairo_light"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tx4"
                        />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_edit1"
                        android:layout_marginTop="22dp"
                        android:layout_marginStart="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/card1">
                <TextView
                    android:id="@+id/price1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="المبلغ"
                    android:textSize="14sp"
                    android:textColor="#9d9d9d"
                    android:fontFamily="@font/cairo_regular"
                    android:layout_marginEnd="30dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الشحن"
                    android:textSize="14sp"
                    android:textColor="#9d9d9d"
                    android:fontFamily="@font/cairo_regular"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/price1_tv"
                    />
                <!--***********************-->
                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15.00"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:id="@+id/SR1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SR"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintLeft_toRightOf="@+id/price_tv"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:id="@+id/delivery_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05.00"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="11dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/price_tv"
                    />
                <TextView
                    android:id="@+id/SR2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SR"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="11dp"
                    app:layout_constraintLeft_toRightOf="@+id/delivery_tv"
                    app:layout_constraintTop_toBottomOf="@+id/SR1"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/bg_fb"
                    app:layout_constraintTop_toBottomOf="@+id/SR2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="المجموع"
                        android:textSize="14sp"
                        android:textColor="#1f57ff"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/cairo_regular"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                    <TextView
                        android:id="@+id/totalPrice_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20.00"
                        android:textSize="16sp"
                        android:textColor="#1f57ff"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SR"
                        android:textSize="16sp"
                        android:textColor="#1f57ff"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        app:layout_constraintLeft_toRightOf="@+id/totalPrice_tv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="متابعة عملية الحجز"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/cairo_semibold"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/bg_login_btn_radues10"
                app:layout_constraintTop_toBottomOf="@+id/linear1"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>